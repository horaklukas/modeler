no-border()
	border: 0
	outline: 0

box-model(width, height, margin, padding)
	display: block
	width: width
	height: height
	margin: margin
	padding: padding

text-select(value)
	-moz-user-select: value is 'none' ? -moz-none : value   // -moz-none
	-khtml-user-select: value
	-webkit-user-select: value
	-o-user-select: value
	user-select: value