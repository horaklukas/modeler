/*
 * Standard styling for goog.ui.Dialog.
 *
 * @author ssaviano@google.com (Steven Saviano)
 * @author attila@google.com (Attila Bodis)
 */
.dialog
  background: #c1d9ff
  border: 1px solid #3a5774
  color: #000
  padding: 4px
  position: absolute
  text-select: none
  a
  a:link
  a:visited
    color: #06c
    cursor: pointer

.dialog-container .bg
  background: #666
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  opacity: 0.5

.dialog .title
  background: #e0edfe
  color: #000
  //cursor: pointer
  font-size: 120%
  font-weight: bold
  /* Add padding on the right to ensure the close button has room. */
  padding: 8px 31px 8px 8px
  position: relative
  _zoom: 1 /* Ensures proper width in IE6 RTL. */

.modal-dialog-title-close
  /* Client apps may override the URL at which they serve the sprite. */
  //background: #e0edfe url(//ssl.gstatic.com/editor/editortoolbar.png) no-repeat -528px 0
  background: #e0edfe no-repeat -528px 0
  cursor: default
  height: 15px
  position: absolute
  right: 10px
  top: 8px
  width: 15px
  vertical-align: middle

.dialog .buttons
.dialog .content
  background-color: #fff
  padding: 8px

.dialog .buttons
  font-weight: bold

// each status box
state-box(color, bgcolor)
  padding: 10px
  color: color
  background-color: bgcolor

// only unframed icon
icon(siz, fontsize = null)
  display: inline-block
  size: siz
  font-size: fontsize ? fontsize : siz
  line-height: siz
  vertical-align:middle
  text-align: center

// icon with rounded frame
framed-icon(siz, color, bgcolor, bordercolor = null)
  icon(siz)
  margin-right: 5px
  border: 2px solid (bordercolor ? bordercolor : bgcolor)
  border-radius: (siz / 1.5)
  color: color
  background-color: bgcolor

.dialog
  .state
    display: block
    width: 400px
    margin: 10px 0
    &.info
      state-box(#00529B, #BDE5F8)
      &:before
        content: '\2139'
        framed-icon(1.2em, #FFFFFF, #00529B, #00529B)

    &.success
      state-box(#4F8A10, #DFF2BF)
      &:before
        content: '\2714'
        icon(1em, 2em)

    &.warning
      state-box(#9F6000, #FEEFB3)
      &:before
        content: '\26a0'
        icon(1em, 2em)

    &.error
      state-box(#D8000C, #FFBABA)
      &:before
        content: '\2717'
        framed-icon(1.2em, #FFFFFF, #D8000C, #D8000C)