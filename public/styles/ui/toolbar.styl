icon(name)
	background: url("./images/icons/"name".png")

#app 
	.goog-toolbar
		background-image: url(/bower_components/closure-library/closure/goog/images/toolbar-bg.png)				
		.icon
			width: 16px
			height: @width
			//display: block
			//margin: 5px auto
			//border: 2px outset
			cursor: active
			&:hover
				cursor: pointer
			&.active
				border-style: inset
		.create-table
			icon 'table'
		.create-rel-ident
			icon 'rel_ident'
		.create-rel-noident
			icon 'rel_noident'
		.generate-sql
			icon 'sql'
		.save-model
			icon 'save'
		.statusbar
			height: 26px
			line-height: @height
			font-size: 16px
			font-weight: bold
			position: absolute
			right: 5px